<h1>Listing all articles</h1>
<%= link_to "Create New Article", new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>

	<% @articles.each do |x| %>
	<tr>
		<td><%= x.title %></td>
		<td><%= x.description %></td>
		<td><%= link_to 'Edit', edit_article_path(x) %></td>
		<td><%= link_to 'Show', article_path(x) %></td>	

	</tr>
	<% end %>
</table>