<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created:</h2>
 <ul>
 	<% @article.errors.full_messages.each do |s| %>
 <li><%= s %></li>
 <% end %>
</ul>
<% end %>

<%= form_for @article do |x| %>
	<p>
		<%= x.label :title %><br>
		<%= x.text_field :title %>
	</p>
	<p>
		<%= x.label :description %><br>
		<%= x.text_area :description %>
	</p>
	<p>
		<%= x.submit %>
	</p>

<% end %>

<%= link_to "Back to Articles Listing", articles_path %>