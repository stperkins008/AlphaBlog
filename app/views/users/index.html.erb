<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
	<%= will_paginate %>
		<% @users.each do |x| %>
			<ul class="listing">
				<div class="row">
					<div class="well col-md-4 col-md-offset-4">
						<li><%= link_to gravatar_for(x), user_path(x) %></li>
						<li class="article-title">
							<%= link_to x.username, user_path(x) %>
						</li>
						<li><small><%= pluralize(x.articles.count, "article") if x.articles %></small></li>
						<% if logged_in? and current_user.admin? %>
							<li><%= link_to "Delete this User", user_path(x), method: :delete,
								data: { confirm: "Are you sure you want to delete the user and all of their articles?"} %></li>
						<% end %>
					</div>
				</div>
			</ul>


	<% end %>
	<%= will_paginate %>
</div>