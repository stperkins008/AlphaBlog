<h1 align="center">Listing All Categories</h1>

<div align="center">
	<%= will_paginate %>
	<% @categories.each do |x| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li class="article-title">
						<%= link_to "#{x.name}", category_path(x) %>
					</li>
				</div>
			</div>
		</ul>
	<% end %>
	<%= will_paginate %>
</div>